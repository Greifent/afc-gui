echo 'making directories'
mkdir /usr/share/afc-gui

echo 'copying files'
cp src/afc-gui /usr/bin
cp src/afc-gui-gtk4.ui /usr/share/afc-gui
cp src/afc-gui.desktop /usr/share/applications
